<%- include("header") -%>

  <div class="box" id="heading">
    <h1>
      <%=days %>
    </h1>
  </div>

  <div class="box">

    <% newItems.forEach(list=> { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= list._id %>" onchange="this.form.submit()" />
          <p>
            <%=list.item%>
          </p>
        </div>
      </form>

      <% }) %>

        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="add item" autocomplete="off" />
          <button type="submit" name="lisTitle" value="<%=days%>" class="btn">+</button>
        </form>
  </div>


  <%- include("footer") -%>